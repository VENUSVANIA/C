void menu() {
    
    int option =0;
    printf("*********\n");
    printf("*--MENU--*\n");
    printf("*********\n");
    printf("please choose an option\n");
    printf("option 1: Say Hello wolrd\n");
    printf("option 2: ASL please\n");
    printf("option 3:Min Max and Average\n");
    printf("option 4:Add even numbers\n");
    printf("option 5:Grades\n");
    printf("option 6:calculate power of two\n");
    printf("calculate square root.\n");
    printf("Exit\n");
    
    
    switch (option)
{ 
 case 1:
        hello();
        break;
   
 case 2:
       ageandname();
       break;
}






